{% extends 'admin/layout.njk' %}

{% block content %}
    <div class="show-title">
        <h2>Chef: {{chef.name}}</h2>
        <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
    </div>
    <section class="start">
        <img id="chef-avatar" src={{chef.avatar}}>
        <h1>{{chef.name}}</h1>

        {% if chef.number_of_recipes == 0 %}
            <p>nenhuma receita cadastrada</p>
        {% elif chef.number_of_recipes == 1 %}
            <p>1 receita</p>
        {% else %}
            <p>{{chef.number_of_recipes}} receitas</p>
        {% endif %}
        
    </section>

    <section class="chef-recipes">
        <h2>Receitas</h2>
        <div class="recipes-mural" style="margin-top: 3vh;margin-bottom: 28%;">
                {% for recipe in recipes %}
                        <div 
                        class="card home" 
                        id="{{recipe.id}}">
                            <img src="{{recipe.src}}" 
                            alt="{{recipe.name}}">
                            
                            <div class="card-home-details" >
                                <h3>{{recipe.title}}</h3>
                                <p>{{chef.name}}</p>
                                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                            </div>
                        </div>
                {% endfor %}
        </div>
        <div>
            <input type="hidden" name="used_recipes">
        </div>
    </section>

{% endblock%}

