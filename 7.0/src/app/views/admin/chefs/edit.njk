{% extends '../layout.njk' %}

{% block content %}
<form id="card" class="card" method="POST" action="/admin/chefs?_method=PUT" enctype="multipart/form-data">
    <div class="creation-header">
        <h3>Editando Chefe</h3>
        <button type="submit">Salvar chef</button>
    </div>
    
    <section class="details">
        
        {% include './fields.njk' %}
        <input type="hidden" name="id" value="{{chef.id}}">
    </section>
</form>


<form id="form-delete" action="/admin/chefs?_method=DELETE" method="post">
    <input type="hidden" name="id" value="{{chef.id}}">
    <button type="submit">Deletar</button>
</form>

<script src="/create.js"></script>
<script>
    const formDelete = document.getElementById('form-delete');
    formDelete.addEventListener('submit', () => {
        const confirmation = confirm("Tem certeza de que deseja deletar esse usu√°rio ?");
        if (!confirmation) {
            event.preventDefault();
        }
    });
</script>

{% endblock content %}