{% extends "../layout.njk" %}

{% block content %}
<section class="home">
    <div class ="show-title users">
        <h1>Usu√°rios</h1>
        <a href="/admin/user-register">Novo</a>
    </div>

    <div class="users-management">
        {% for user in users %}
            <div class="user-homecard">
               <h6>{{user.name}}</h6>
               <p>{{user.email}}</p>

               <div class="user-management">
                   <a href="/admin/user-update/{{user.id}}">Editar</a>
                   <form action="/admin/user-delete/{{user.id}}?_method=DELETE" method="post">
                        <input type="hidden" name="id" value="{{user.id}}">
                        <button type="submit">remover</button>
                   </form>
               </div>
            </div>
        {% endfor %}
    </div>
</section>
{% endblock%}