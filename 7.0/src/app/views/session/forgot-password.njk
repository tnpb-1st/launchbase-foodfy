{% extends "./layout.njk" %}

{% block content %}
    
    <form action="/users/forgot-password" method="POST">
        
        <h2>Esqueceu a Senha?</h2>
        
        <div class="login-container forgot">

            <div class="login-field">
                <h3>Email</h3>
                <input
                    type="email" 
                    name="email"
                    value= "{{user.email}}"
                    placeholder="Digite seu email"
                    onblur="Validate.apply(this, isEmail)"
                    >
            </div>

            <div class="button-containers forgot">
                <button class="button" type="submit">Recuperar</button>
            </div>

        </div>
    </form>

{% endblock %}