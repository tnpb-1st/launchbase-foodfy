{% extends "./layout.njk" %}

{% block content %}
    
    <form action="/users/password-reset" method="post">
        
        {# Mensagem #}

        <h2>Nova Senha</h2>

        <div class="login-container forgot">

            <div class="login-field">
                <h3>Email</h3>
                <input 
                    type="email" 
                    name="email" 
                    placeholder="Digite seu email"
                    value = {{user.email}}
                >
            </div>

            <div class="login-field">
                <h3>Nova Senha</h3>
                <input type="password" name="password" placeholder="Digite sua nova senha">
            </div>

            <div class="login-field">
                <h3>Repetir Senha</h3>
                <input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
            </div>

            <div class="button-containers forgot">
                <button class="button" type="submit">Nova Senha</button>
            </div>
        </div>

        <input type="hidden" name="token" value="{{token}}">
    </form>

{% endblock %}