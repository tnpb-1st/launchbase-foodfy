<body>
    <header>
        <img src="/images/black_logo.png" id="logo">
        <div id="links">
            <a id="first" href="/about">Sobre</a>
            <a href="/recipes">Receitas</a>
        </div>
    </header>
    
    <section id="background">
        <div id="text-container">
            <p id="title">As melhores Receitas</p>
        
            <p id="description">Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.</p>
        </div>

        <img id="chef" src="/images/chef.png">
    </section>

    <div class="container">
        <h2>Mais acessadas</h2>
        
        <section class="cards">
            {% for recipe in recipes %} 
                <div class="card" id={{recipe.id}}>
                    <img class="food-image" src="{{recipe.image}}" alt="{{recipe.title}}">
                    <p class="food-title">{{recipe.title}}</p>
                    <p class="food-author">por {{recipe.author}}</p>
                </div>
            {% endfor %}
        </section>
    </div>

